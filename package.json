{
    "name": "atomico-base",
    "description": "a repo to start with atomico",
    "meta": {
        "draft": true,
        "title": "Simple Doc",
        "description": "Create singlePage documentations + web components",
        "branch": "https://github.com/atomicojs/base/blob/5-simple-doc/"
    },
    "version": "0.0.0",
    "scripts": {
        "start": "estack src/**/*.{md,html} docs --watch --server --sourcemap",
        "build": "estack src/**/*.{md,html} docs --minify --sizes",
        "build:npm": "estack src/**/**/*-*.js;!src/**/**/*.{showcase,test}.js ./ --minify --external --sizes --sourcemap",
        "create:component": "tfolder tfolder/component src/components",
        "create:hook": "tfolder tfolder/hook src/hooks"
    },
    "dependencies": {
        "atomico": "^0.23.3"
    },
    "devDependencies": {
        "estack": "^0.7.3",
        "tfolder-cli": "^0.2.0"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
