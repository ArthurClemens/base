{
	"name": "atomico-base",
	"description": "a repo to start with atomico",
	"version": "0.0.0",
	"scripts": {
		"build": "bundle --config bundleHtml --minify",
		"dev": "bundle--config bundleHtml --watch --server",
		"dev:doc": "bundle --config bundleDoc --watch --server",
		"build:components": "bundle src/components/**/*-*.js components --external",
		"prepare": "npm run build:components"
	},
	"bundleHtml": {
		"src": [
			"*.html"
		],
		"dir": "dist"
	},
	"bundleDoc": {
		"src": [
			"src/index.md",
			"src/components/**/*.md"
		],
		"dir": "docs",
		"mdTemplate": "doc-template"
	},
	"dependencies": {
		"atomico": "^0.18.1"
	},
	"devDependencies": {
		"bundle-cli": "^0.13.3"
	}
}
